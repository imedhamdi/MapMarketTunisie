{
  "name": "mapmarket-api",
  "version": "1.0.0",
  "description": "API Node.js pour MapMarket Tunisie - gestion utilisateurs et authentification",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext js,json --exec \"node src/server.js\"",
    "dev:staging": "NODE_ENV=staging nodemon --watch src --ext js,json --exec \"node src/server.js\"",
    "start": "node src/server.js",
    "build": "npm run build:css",
    "build:css": "npm run build:css:tokens && npm run build:css:app",
    "build:css:app": "postcss public/css/app.css -o public/dist/app.min.css",
    "build:css:tokens": "postcss public/css/tokens.css -o public/dist/tokens.min.css",
    "seed": "node scripts/seed.js",
    "backup": "./scripts/backup-mongodb.sh",
    "restore": "./scripts/restore-mongodb.sh",
    "test": "NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --exit",
    "test:watch": "NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --watch",
    "test:changePassword": "NODE_ENV=test mocha tests/integration/changePassword.test.js --timeout 10000 --exit",
    "test:security": "./scripts/test-monitoring-security.sh",
    "test:inline": "./scripts/validate-inline-fix.sh",
    "clean:console": "./scripts/clean-console-logs.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,json}\"",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.9",
    "redis": "^5.9.0",
    "sanitize-html": "^2.13.0",
    "sharp": "^0.34.4",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "clean-css-cli": "^5.6.3",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "html-minifier-terser": "^7.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.1.1",
    "prettier": "^3.6.2",
    "purgecss": "^7.0.2",
    "supertest": "^7.1.4"
  }
}
